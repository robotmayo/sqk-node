<!doctype html>
<html class="no-js" lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>Profile</title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        {{>css}}
    </head>
    <body>
        <div class="container">
            {{>nav}}
            <h1>{{user.username}}'s Profile</h1>
            
                    {{#if followsUser}}
                    <form action="/unfollow/{{user.username}}" method="POST">
                        <button class="btn btn-warning"><span class="glyphicon glyphicon-remove"></span> Follow</button>
                    </form>
                    {{else}}
                        <form action="/follow/{{user.username}}" method="POST">
                            <button class="btn btn-primary">Follow</button>
                        </form>
                    {{/if}}
                    
            <div class="row">
                <div class="col-lg-4 push-4">
                    {{#each squeeks}}
                        <span class="text-muted">{{createdOn}}</span>
                        <p>{{message}}</p>
                    {{/each}}
                </div>
            </div>
        </div>
