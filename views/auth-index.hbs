<!doctype html>
<html class="no-js" lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>Squeek</title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        {{>css}}
    </head>
    <body>
        <div class="container">
            {{>nav}}
            <div class="row">
                <div class="profile-header col-lg-4">
                    <span class="username">{{user.username}}</span>
                    <form action="/squeek" method="POST">
                        <textarea name="squeek" id="squeek" cols="10" rows="2" class="form-control"></textarea>
                        <br>
                        <button class="btn btn-primary">Send</button>
                    </form>
                </div>
                <br>
                <div class="row">
                    <div class="col-lg-4 push-4">
                        {{#each timeline}}
                            <a href="/profile/{{userInfo.username}}" class="username">{{userInfo.username}}</a>
                            <span class="time">{{createdOn}}</span>
                            <p>{{message}}</p>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
